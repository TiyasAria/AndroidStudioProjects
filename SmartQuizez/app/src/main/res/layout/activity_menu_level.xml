<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuLevel">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lengkungan1"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/txt_desc" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lengkungan2"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/txt_desc" />

    <ImageView
        android:id="@+id/score"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        android:src="@drawable/koin"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_40dp"
        android:layout_marginEnd="@dimen/_120dp"
        android:contentDescription="@string/txt_desc" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_your_score"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_20sp"
        app:layout_constraintStart_toEndOf="@+id/score"
        android:layout_marginStart="@dimen/_10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_45dp"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:contentDescription="@string/txt_desc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_home"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/back"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/artelic"
        android:text="@string/txt_detail_awal"
        android:textAlignment="center"
        android:textSize="@dimen/_30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_100dp"
        tools:ignore="MissingConstraints"
        android:textColor="@android:color/black"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cdv_level1"
        android:layout_width="@dimen/_150dp"
        android:layout_height="180dp"
        app:cardCornerRadius="@dimen/_30dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="210dp"
        android:layout_marginStart="@dimen/_50dp">

        <View
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_gradient"
            android:padding="@dimen/_50dp"
           />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_40dp"
            android:contentDescription="@string/txt_desc" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_level_1"
        android:textSize="@dimen/_20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/_20dp"
        tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_detailLevel"
            android:textAlignment="center"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            tools:ignore="RtlCompat,RtlHardcoded"
            android:layout_marginTop="@dimen/_130dp"
            android:layout_gravity="center_horizontal"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
    android:id="@+id/cdv_level2"
    android:layout_width="@dimen/_150dp"
    android:layout_height="180dp"
    tools:ignore="MissingConstraints"
        app:cardCornerRadius="@dimen/_30dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@id/cdv_level1"
    android:layout_marginTop="210dp"
    android:layout_marginStart="@dimen/_20dp">

    <View
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_hitam"
        android:padding="@dimen/_50dp"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_40dp"
            android:contentDescription="@string/txt_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_level2"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="#FFA800"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/_20dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_detailLevel"
            android:textAlignment="center"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="#FFA800"
            tools:ignore="RtlCompat,RtlHardcoded"
            android:layout_marginTop="@dimen/_130dp"
            android:layout_gravity="center_horizontal"/>
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cdv_level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:cardCornerRadius="@dimen/_30dp"
        app:layout_constraintTop_toBottomOf="@id/cdv_level1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginStart="@dimen/_50dp">

        <View
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_hitam"
            android:padding="@dimen/_50dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_40dp"
            android:contentDescription="@string/txt_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_level3"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="#FFA800"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/_20dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_detailLevel"
            android:textAlignment="center"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="#FFA800"
            tools:ignore="RtlCompat,RtlHardcoded"
            android:layout_marginTop="@dimen/_130dp"
            android:layout_gravity="center_horizontal"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cdv_level4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:cardCornerRadius="@dimen/_30dp"
        app:layout_constraintTop_toBottomOf="@id/cdv_level2"
        app:layout_constraintStart_toEndOf="@id/cdv_level3"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginStart="@dimen/_20dp">

        <View
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_hitam"
            android:padding="@dimen/_50dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_40dp"
            android:contentDescription="@string/txt_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_level4"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="#FFA800"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/_20dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_detailLevel"
            android:textAlignment="center"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="#FFA800"
            tools:ignore="RtlCompat,RtlHardcoded"
            android:layout_marginTop="@dimen/_130dp"
            android:layout_gravity="center_horizontal"/>
    </androidx.cardview.widget.CardView>

    <!-- level off -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cdv_level2_buka"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/_30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cdv_level1"
        android:layout_marginTop="210dp"
        android:layout_marginStart="@dimen/_20dp">

        <View
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_gradient"
            android:padding="@dimen/_50dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_40dp"
            android:contentDescription="@string/txt_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_level2"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/_20dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_detailLevel"
            android:textAlignment="center"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            tools:ignore="RtlCompat,RtlHardcoded"
            android:layout_marginTop="@dimen/_130dp"
            android:layout_gravity="center_horizontal"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cdv_level3_buka"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/_30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/cdv_level1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginStart="@dimen/_50dp">

        <View
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_gradient"
            android:padding="@dimen/_50dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_40dp"
            android:contentDescription="@string/txt_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_level3"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/_20dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_detailLevel"
            android:textAlignment="center"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            tools:ignore="RtlCompat,RtlHardcoded"
            android:layout_marginTop="@dimen/_130dp"
            android:layout_gravity="center_horizontal"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cdv_level4_buka"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/_30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/cdv_level2_buka"
        app:layout_constraintStart_toEndOf="@id/cdv_level3_buka"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginStart="@dimen/_20dp">

        <View
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_gradient"
            android:padding="@dimen/_50dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_40dp"
            android:contentDescription="@string/txt_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_level4"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/_20dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_detailLevel"
            android:textAlignment="center"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            tools:ignore="RtlCompat,RtlHardcoded"
            android:layout_marginTop="@dimen/_130dp"
            android:layout_gravity="center_horizontal"/>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>